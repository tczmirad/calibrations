{
  "type": "object",
  "properties": {
    "IsScheduler": {
      "type": "identifier",
      "selector": "html",
      "control": "url.CalibrationsSchedule"
    },
    "AreFiltersShown": {
      "type": "identifier",
      "selector": "#MainContent_lbFilters span",
      "selectContains": "Ukryj filtry",
      "control": "exists"
    },
    "ClickNow": {
      "type": "action",
      "selector": "#MainContent_lbNow span",
      "control": "action.link",
      "selectContains": "Teraz"
    },
    "Items": {
      "type": "array",
      "selectorAll": "table.main-grid tbody tr:not(.header-row)",
      "items": {
        "type": "object",
        "properties": {
          "ID": {
            "type": "string",
            "selector": ".main-grid tbody tr td",
            "control": "property.innerText",
            "selectIndex": 2
          },
          "SerialNumber": {
            "type": "string",
            "selector": ".main-grid tbody tr td",
            "control": "property.innerText",
            "selectIndex": 4
          }
        }
      }
    }
  },
  "connect": [
    {
      "match": [
        "IsScheduler",
        "AreFiltersShown"
      ],
      "screens": [
        "scheduler"
      ]
    }
  ]
}
